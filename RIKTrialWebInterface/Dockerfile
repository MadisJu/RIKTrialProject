FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 7000

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["RIKTrialWebInterface/RIKTrialWebInterface.csproj", "RIKTrialWebInterface/"]
COPY ["RIKTrialSharedModels/RIKTrialSharedModels.csproj", "RIKTrialSharedModels/"]
RUN dotnet restore "RIKTrialWebInterface/RIKTrialWebInterface.csproj"
COPY . .
WORKDIR "/src/RIKTrialWebInterface"
RUN dotnet publish "RIKTrialWebInterface.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "RIKTrialWebInterface.dll"]
