<div class="Paging-Bar">

    <button class="Btn Btn--Primary Btn--Primary--Small"
            disabled="@(Page <= 1)"
            @onclick="PrevClicked">
        &larr;
    </button>

    <span>Lk: @Page</span>

    <button class="Btn Btn--Primary Btn--Primary--Small"
            disabled="@(CurrentCount < PageSize)"
            @onclick="NextClicked">
        &rarr;
    </button>

</div>

@code 
{
    [Parameter]
    public int Page { get; set; } = 1;

    [Parameter]
    public int PageSize { get; set; } = 10;

    [Parameter]
    public int CurrentCount { get; set; }

    [Parameter]
    public EventCallback OnNext { get; set; }

    [Parameter]
    public EventCallback OnPrev { get; set; }

    private async Task NextClicked()
    {
        await OnNext.InvokeAsync();
    }

    private async Task PrevClicked()
    {
        await OnPrev.InvokeAsync();
    }

}
